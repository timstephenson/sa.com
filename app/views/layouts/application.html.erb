  </head>
  <body id="<%= @page.title.downcase.gsub(" ", "-") %>-page">
    <%= site_bar -%>
    <div id="page_container">
      <header id="header">
        <%= render "/refinery/header" -%>
      </header>
      <section id="page" class='container mt70'>
        <div class="row">
          <div class="col-xs-12">
            <%= yield %>
          </div>
        </div>
      </section>
      <footer id="page-footer">
        <div class="container">

          <div class="row">
            <div class="col-xs-12">
              <%= render "/refinery/footer" -%>
            </div>
          </div>
          
        </div>
      </footer>
