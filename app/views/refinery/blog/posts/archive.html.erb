<% content_for :title, "#{t('.blog_archive_for', :date => @date_title)}" %>

<div class="row">
  <div class="col-sm-8 col-md-9">
    <% content_for :body do %>
      <h1><%= t('.blog_archive_for', :date => @date_title) %></h1>
      <% if @posts.any? %>
        <section id="blog_posts">
          <%= render :partial => "/refinery/blog/shared/post", :collection => @posts %>
          <%= will_paginate @posts %>
        </section>
      <% else %>
        <p><%= t('.no_blog_articles_posted', :date => @date_title) %></p>
      <% end %>
    <% end %>

    <%= render "/refinery/content_page", :remove_automatic_sections => true %>
  </div>

  <div class="col-sm-4 col-md-3">
    <% content_for :side_body_prepend do -%>
      <%= raw @page.content_for(Refinery::Pages.default_parts.second[:slug].to_sym) %>
    <% end if Refinery::Pages.default_parts.many? -%>
    
    <%= render '/refinery/blog/shared/body_content_right' %>
  </div>
</div>

