<div class="col-sm-4 event">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">
        <%= link_to event.title, refinery.events_event_path(event) %>
      </h3>
    </div>

    <div class="panel-body">
      <%- if event.photo %>
        <%= image_tag event.photo.url, class: "img-responsive mb15" %>
      <%- end %>

      <%- if event.group %>
        <div class="row">
          <div class="col-xs-2 col-sm-3">
            <p class="text-muted text-align-right">Who:</p>
          </div>
          <div class="col-xs-10 col-sm-9">
            <%=raw event.group %>
          </div>              
        </div>
      <%- end %>

      <%- if event.short_description %>
        <div class="row">
          <div class="col-xs-2 col-sm-3">
            <p class="text-muted text-align-right">What:</p>
          </div>
          <div class="col-xs-10 col-sm-9">
            <%=raw event.short_description %>
          </div>              
        </div>
      <%- end %>

      <div class="row">
        <div class="col-xs-2 col-sm-3">
          <p class="text-muted text-align-right">When:</p>
        </div>
        <div class="col-xs-10 col-sm-9">
          <%= event.date.strftime( "%A, %B %e at %l:%M %P" ) %>
        </div>              
      </div>

      <div class="row">
        <div class="col-xs-2 col-sm-3">
          <p class="text-muted text-align-right">Where:</p>
        </div>
        <div class="col-xs-10 col-sm-9">
          <%=raw event.location %>
        </div>              
      </div>

    </div>
  </div>
</div>